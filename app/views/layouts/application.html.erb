<!DOCTYPE html>
<html>
<head>
  <title>South Africa Lotto Helper</title>
  <%= stylesheet_link_tag 'application.less', :rel => 'stylesheet/less' %>
  <%= javascript_include_tag :defaults, 'less/less.min.js' %>
  <% if Rails.env == 'development' %>
    <script type="text/javascript" charset="utf-8">
      less.env = "development";
      less.watch();
    </script>
    <%= javascript_include_tag 'centage/centage.js' %>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function(){
                grid(12); /* Your grid column number here, please */
            });
    </script>
  <% end %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrap">
    <div id="header">
      <div>
          <!-- .logo -->
        <div class="logo">
          <h1><%= link_to 'SA Lotto Helper', '/' %></h1>
          <span>the number generator</span>
        </div>
          <!-- /.logo -->
        <nav>
          <ul>
            <li <%= "class='active'" if current_page?(root_path) %> >
                <%= link_to 'Home', root_path %>
            </li>
            <li <%= "class='active'" if current_page?('/lotto') %> >
                <%= link_to 'Lotto', '/lotto' %>
            </li>
            <li <%= "class='active'" if current_page?('/powerball') %> >
                <%= link_to 'Powerball', '/powerball' %>
            </li>
            
            <% if signed_in? %>
            <li <%= "class='active'" if current_page?('/me') %> >
              <%= link_to 'Profile', '/me' %>
            </li>
              <li><%= link_to 'Logout', '/logout' %></li>
            <% else %>
              <li><%= link_to 'Login', '/login' %></li>
            <% end %>
            
          </ul>
        </nav>
      </div>
    </div>
    
    <div id="content" class="<%= "#{params[:controller]}" %> <%= "#{params[:controller]}-#{params[:action]}" %>" >
      <div class="error"><%= flash[:error] %></div>
      <div class="notice"><%= flash[:notice] %></div>
      <%= yield %>
    </div>
    <div id="footer">
      <div>
          <nav>
          <ul>
            <li><%= link_to 'Home', root_path %>|</li>
            <li><%= link_to 'Support', '/support' %>|</li>
            <li><%= link_to 'Contacts', '/contacts' %></li>
          </ul>
        </nav>
        <span>SA Lotto Helper</span> &nbsp;| &nbsp;<a href="/privacy_policy">Privacy policy</a>
      </div>
    </div>
  </div>

</body>
</html>
